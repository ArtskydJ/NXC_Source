int senseButton(int val, bool lr_ud, int add, int high, bool cut)
  {
  int lu,rd;
  if (lr_ud)
    {lu=BTNLEFT; rd=BTNRIGHT;}
  else
    {lu=BTNCENTER; rd=BTNEXIT; SetLongAbort(true);}
  if (ButtonPressed(lu))   {val-=add;}
  until (ButtonPressed(lu)==false)  {}
  if (ButtonPressed(rd))  {val+=add;}
  until (ButtonPressed(rd)==false) {}
  if (cut)
    {if (val<0)   {val=0;}
    if (val>cut) {val=cut;}}
  else
    {if (val<0)  {val=cut;}
    if (val>cut)  {val=0;}}
  return val;
  }
